<div class="row text-center">
  <h1>Friends</h1>
  <% @user.friends.each do |user| %>
    <% if user.picture_url %>
      <%= link_to image_tag(user.picture, class:"picture") + user.name, user_path(user) %>
    <% else %>
      <%= link_to image_tag(user.picture_url, class:"picture") + user.name, user_path(user) %>
    <% end %>
  <% end %>
</div>
